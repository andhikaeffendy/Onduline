<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_project_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wiradipa.ondulineApplicator.MenuDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="24dp"
                android:text="Detail Produk"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp">
                    <ImageView
                        android:id="@+id/btnOnduline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"/>
                    <TextView
                        android:id="@+id/txtMenuProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:text="ONDULINEÂ®"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/btnDetaiPDescriptionProduct"
                    android:onClick="ProductDetail"
                    android:text="deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- desktipsi -->
                <LinearLayout
                    android:id="@+id/LinearDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtDescriptionProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:text="@string/DescriptionBardoline"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btnDetailProductSpecification"
                    android:onClick="ProductDetail"
                    android:text="Spesifikasi produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <!-- spesifikasi produk -->
                <LinearLayout
                    android:id="@+id/LinearProductSpecification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgProductSpecification1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_spesification_bardoline"/>
                    <!-- spesifikasi product 1-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BARDOLINETradisional"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bdl_spec_img_tradisional"/>
                    <!-- spesifikasi product 2-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BARDOLINEProStandart"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bdl_spec_img_pro_standart"/>

                </LinearLayout>
                <Button
                    android:id="@+id/btnDetailColorSelection"
                    android:onClick="ProductDetail"
                    android:text="Pilihan Warna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Linear color selection -->
                <LinearLayout
                    android:id="@+id/LinearColorSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- img 1 -->
                    <TextView
                        android:id="@+id/txtColorSelection1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/BARDOLINETradisional"/>
                    <ImageView
                        android:id="@+id/imgColorSelection1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bdl_color_traditional"/>

                    <!-- img 2 -->
                    <TextView
                        android:id="@+id/txtColorSelection2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/BARDOLINEProStandart"/>
                    <ImageView
                        android:id="@+id/imgColorSelection2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bdl_color_pro_standart"/>

                </LinearLayout>
                <Button
                    android:id="@+id/btnDetailAdvantages"
                    android:onClick="ProductDetail"
                    android:text="Keunggulan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- advantages -->
                <LinearLayout
                    android:id="@+id/LinearAdvantages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- advantages 1-->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_advantages_tidakberisik"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlTidakBerisik"/>

                    <!-- advantages 2-->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_advantages_estetika"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlEstetika"/>

                    <!-- advantages 3-->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_advantages_flaksible"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlFleksibel"/>

                    <!-- advantages 4-->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_advantages_aman"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlAman"/>

                </LinearLayout>
                <Button
                    android:id="@+id/btnDetailAccessories"
                    android:onClick="ProductDetail"
                    android:text="Jenis Atap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <!-- Accessories -->
                <LinearLayout
                    android:id="@+id/LinearAccessories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Accessories 1-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bardoline_tradisional"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlAccessorisTradisional"/>

                    <!-- Accessories 2-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bardoline_pro_tradisional"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlAccessorisProTradisional"/>

                    <!-- Accessories 3-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bardoline_standart"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlAccessorisStandart"/>

                    <!-- Accessories 4-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bardoline_pro_standart"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlAccessorisProStandart"/>

                    <!-- Accessories 5-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bardoline_pro_125_hexagonal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlAccessorisProS125Hexagonal"/>

                    <!-- Accessories 6-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bardoline_s_nova"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlAccessorisSNova"/>

                    <!-- Accessories 7-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bardoline_pro_s_125_design"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlAccessorisProS125Design"/>

                    <!-- Accessories 8-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bardoline_pro_opera"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlAccessorisProOpera"/>

                    <!-- Accessories 9-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bardoline_biltmore"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdlAccessorisBiltmore"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btnDetailInstalationGuide"
                    android:onClick="ProductDetail"
                    android:text="panduan pemasangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Instalation Guide -->
                <LinearLayout
                    android:id="@+id/LinearInstalationGuide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdl_instalationguide1"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/bdl_img_instalation_guide" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdl_instalationguide2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bdl_instalationguide3"/>
                </LinearLayout>
                <Button
                    android:onClick="ProductDetail"
                    android:text="sustainability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/LinearSubtainability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>
