<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_project_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wiradipa.ondulineApplicator.MenuDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="24dp"
                android:text="Detail Produk"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp">
                    <ImageView
                        android:id="@+id/btnOnduline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"/>
                    <TextView
                        android:id="@+id/txtMenuProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="30dp"
                        android:text="@string/onduline"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/btnDetaiPDescriptionProduct"
                    android:onClick="ProductDetail"
                    android:text="deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackAlpha"
                    android:textColor="@color/colorTextLight" />

                <!-- desktipsi -->
                <LinearLayout
                    android:id="@+id/LinearDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtDescriptionProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center"
                        android:text="@string/DescriptionOnduline"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btnDetailProductSpecification"
                    android:onClick="ProductDetail"
                    android:text="Spesifikasi produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackAlpha"
                    android:textColor="@color/colorTextLight"/>


                <!-- spesifikasi produk -->
                <LinearLayout
                    android:id="@+id/LinearProductSpecification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- spesifikasi product 1-->
                    <ImageView
                        android:id="@+id/imgProductSpecification1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_spesification_onduline1"/>
                    <TextView
                        android:id="@+id/txtProductSpecification1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/specificationOnduline"/>

                </LinearLayout>
                <Button
                    android:id="@+id/btnDetailColorSelection"
                    android:onClick="ProductDetail"
                    android:text="Pilihan Warna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackAlpha"
                    android:textColor="@color/colorTextLight" />

                <!-- Linear color selection -->
                <LinearLayout
                    android:id="@+id/LinearColorSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- img 1 -->
                    <TextView
                        android:id="@+id/txtColorSelection1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/Black"/>
                    <ImageView
                        android:id="@+id/imgColorSelection1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/odl_black"/>

                    <!-- img 2 -->
                    <TextView
                        android:id="@+id/txtColorSelection2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/Green"/>
                    <ImageView
                        android:id="@+id/imgColorSelection2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/odl_green"/>

                    <!-- img 3 -->
                    <TextView
                        android:id="@+id/txtColorSelection3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/ClassicRed"/>
                    <ImageView
                        android:id="@+id/imgColorSelection3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/odl_red"/>

                    <!-- img 4 -->
                    <TextView
                        android:id="@+id/txtColorSelection4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/Brown"/>
                    <ImageView
                        android:id="@+id/imgColorSelection4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/odl_brown"/>

                </LinearLayout>
                <Button
                    android:id="@+id/btnDetailAdvantages"
                    android:onClick="ProductDetail"
                    android:text="Keunggulan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackAlpha"
                    android:textColor="@color/colorTextLight"/>

                <!-- advantages -->
                <LinearLayout
                    android:id="@+id/LinearAdvantages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <!-- advantages 1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_advantages_cepat"/>

                        </RelativeLayout>
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/odlCepat"/>

                    </LinearLayout>

                    <!-- advantages 2-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_advantages_tidakberisik"/>

                        </RelativeLayout>
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/odlTidakBerisik"/>

                    </LinearLayout>


                    <!-- advantages 3-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_advantages_flaksible"/>

                        </RelativeLayout>
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/odlFleksibel"/>

                    </LinearLayout>


                    <!-- advantages 4-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:weightSum="6">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_advantages_aman"/>

                        </RelativeLayout>
                        <TextView
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/odlAman"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnDetailAccessories"
                    android:onClick="ProductDetail"
                    android:text="aksesoris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackAlpha"
                    android:textColor="@color/colorTextLight" />


                <!-- Accessories -->
                <LinearLayout
                    android:id="@+id/LinearAccessories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Accessories 1-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odv_accessoris_5_standard_ridge"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/StandardRidge"/>

                    <!-- Accessories 2-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odl_accessoris_verge"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/OndulineVergeStandard"/>

                    <!-- Accessories 3-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odv_accessoris_apron_flashing"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ApronFlashing"/>

                    <!-- Accessories 4-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odv_accessoris_14_speedy_screw"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/SpeedyScrew"/>

                    <!-- Accessories 5-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odv_accessoris_15_safe_top_nails"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/SafeTopNails"/>

                    <!-- Accessories 6-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odv_accessoris_6_onduband"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ONDUBAND"/>

                    <!-- Accessories 7-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odv_accessoris_7_ondulair_slim"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ONDULAIR"/>

                    <!-- Accessories 8-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odv_accessoris_onduclair"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ONDUCLAIR"/>

                    <!-- Accessories 9-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odv_accessoris_8_skylight"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Skylight"/>

                    <!-- Accessories 10-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odv_accessoris_16_alumunium_z_profile"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/AluminiumZprofile"/>

                    <!-- Accessories 11-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/odv_accessoris_17_ondumastic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Ondumastic"/>


                </LinearLayout>

                <Button
                    android:id="@+id/btnDetailInstalationGuide"
                    android:onClick="ProductDetail"
                    android:text="panduan pemasangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@color/colorBlackAlpha"
                    android:textColor="@color/colorTextLight"/>

                <!-- Instalation Guide -->
                <LinearLayout
                    android:id="@+id/LinearInstalationGuide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- masih kosong -->
                </LinearLayout>
                <Button
                    android:id="@+id/btnDetailSubtainability"
                    android:onClick="ProductDetail"
                    android:text="subtainability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackAlpha"
                    android:textColor="@color/colorTextLight"/>

                <LinearLayout
                    android:id="@+id/LinearSubtainability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/odl_subtainability_1"
                        android:textSize="18dp"
                        android:layout_marginBottom="10dp"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_odv_sustainability_1"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarSize="18dp"
                        android:src="@drawable/img_odv_sustainability_2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/odl_subtainability_2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/odl_subtainability_3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/odl_subtainability_4"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/odl_subtainability_5"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>
