<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_user_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wiradipa.ondulineApplicator.ChooseUserTypeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="24dp"
                android:text="Saya Adalah"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/btnRetailer"
            android:onClick="onClickChooseUser"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            android:layout_weight="2"/>
        <ImageView
            android:id="@+id/btnAplikator"
            android:onClick="onClickChooseUser"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:layout_weight="2"/>
        <ImageView
            android:id="@+id/btnIndividu"
            android:onClick="onClickChooseUser"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            android:layout_weight="2"/>

        <RelativeLayout
            android:id="@+id/btnLanjut"
            android:layout_width="match_parent"
            android:onClick="onClickChooseUser"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="24dp"
                android:text="Lanjut"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
