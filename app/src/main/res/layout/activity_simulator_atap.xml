<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_simulator_atap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wiradipa.ondulineApplicator.SimulatorAtapActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_02"
        android:orientation="vertical"
        android:weightSum="13">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_drawer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/simulation_tittle"
                android:textColor="@color/colorTextLight"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgSimulator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@drawable/layer_list"
            android:scaleType="centerCrop"
            android:src="@drawable/maisonmoderne_c1_shaded_brown_v1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Jenis Atap : "
                            android:textColor="@color/colorBlackAlpha"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spnAtapSimulatorAtap"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="10dp" />


                        <!--============================= pilihan button ===\=========================-->
                        <LinearLayout
                            android:id="@+id/LinearColorButton"
                            android:layout_width="match_parent"
                            android:layout_height="580dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <!-- ================= Layout Vertical 1 ===================== -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:weightSum="4">

                                <!-- button 1-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/btnEbonyBlack"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:onClick="simulator"
                                            android:src="@drawable/ebony_black" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:text="@string/EBONYBLACK"
                                            android:textColor="@color/colorBlackAlpha" />

                                    </LinearLayout>

                                </RelativeLayout>

                                <!-- button 2-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/btnForestGreen"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:onClick="simulator"
                                            android:src="@drawable/forest_green" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:text="@string/FORESTGREEN"
                                            android:textColor="@color/colorBlackAlpha" />

                                    </LinearLayout>

                                </RelativeLayout>

                                <!-- button 3-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/btnAntraciteBlack"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:onClick="simulator"
                                            android:src="@drawable/antracite_black" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:text="@string/AntrachiteBlack"
                                            android:textColor="@color/colorBlackAlpha" />

                                    </LinearLayout>

                                </RelativeLayout>
                                <!-- button 4-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/btnShadedRed"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:onClick="simulator"
                                            android:src="@drawable/shaded_red_0_0" />

                                        <TextView
                                            android:id="@+id/textView5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:text="@string/ShadedRed"
                                            android:textColor="@color/colorBlackAlpha" />

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                            <!--=====================================================-->
                            <!-- ================= Layout Vertical 2 ===================== -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:weightSum="4">

                                <!-- button 1-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/btnTerracota"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:onClick="simulator"
                                            android:src="@drawable/terracota" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:text="@string/TERRACOTA"
                                            android:textColor="@color/colorBlackAlpha" />

                                    </LinearLayout>

                                </RelativeLayout>

                                <!-- button 2-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/btnRedClassic"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:onClick="simulator"
                                            android:src="@drawable/red_classic" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:text="@string/CLASSICRED"
                                            android:textColor="@color/colorBlackAlpha" />

                                    </LinearLayout>

                                </RelativeLayout>

                                <!-- button 3-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/btnShadedBrown"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:onClick="simulator"
                                            android:src="@drawable/shaded_brown" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:text="@string/SHADEDBROWN"
                                            android:textColor="@color/colorBlackAlpha" />

                                    </LinearLayout>

                                </RelativeLayout>


                                <!-- button 4-->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/btnShadedGreen"
                                            android:layout_width="70dp"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:onClick="simulator"
                                            android:src="@drawable/shaded_green_0_0" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:text="@string/ShadedGreen"
                                            android:textColor="@color/colorBlackAlpha" />

                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                            <!--=====================================================-->
                        </LinearLayout>
                        <!--=========================  ending pilihan button =========================-->

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>
