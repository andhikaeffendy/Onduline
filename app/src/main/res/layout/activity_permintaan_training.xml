<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_permintaan_training"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wiradipa.ondulineApplicator.PermintaanTrainingActivity">



    <!-- Login progress -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_02"
        android:weightSum="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_nav_drawer"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextLight"
                android:textAlignment="center"
                android:textSize="24dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="Permintaan Training"
                android:textStyle="bold"
                android:id="@+id/textView2" />
        </RelativeLayout>



        <ScrollView
            android:id="@+id/training_form"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackAlpha"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="No HP*"/>
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:hint="isi no hp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtTittleDateTraining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlackAlpha"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:text="Tanggal Training*"/>
                    <TextView
                        android:id="@+id/txtisianTraining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtTittleDateTraining"
                        android:visibility="gone"
                        android:textSize="20dp"
                        android:text="00/00/00"/>
                    <TextView
                        android:id="@+id/txtisianTrainingView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtTittleDateTraining"
                        android:textSize="20dp"
                        android:text="00/00/00"/>
                    <Button
                        android:id="@+id/btnDatePicker"
                        android:onClick="setDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ps__button_youtube"
                        android:textColor="@color/colorTextLight"
                        android:layout_alignParentRight="true"
                        android:text="Tanggal Training"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackAlpha"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="Total Peserta*"/>
                <EditText
                    android:id="@+id/et_totalPeserta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_margin="5dp"
                    android:hint="isi total peserta"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackAlpha"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="@string/state"/>
                <AutoCompleteTextView
                    android:id="@+id/act_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Isi provinsi anda membeli"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackAlpha"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="Kota*"/>
                <AutoCompleteTextView
                    android:id="@+id/act_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Isi kota anda membeli"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackAlpha"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="Alamat Lengkap*"
                    android:id="@+id/textView6" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Alamat Training"/>

                <!-- edit text training -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlackAlpha"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:text="Keterangan : "/>
                        <EditText
                            android:id="@+id/et_keterangan"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="5dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <Button
                    android:id="@+id/btn_submit"
                    android:onClick="onClickTraining"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ps__button_youtube"
                    android:textColor="@color/colorTextLight"
                    android:text="@string/submit"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/training_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>
