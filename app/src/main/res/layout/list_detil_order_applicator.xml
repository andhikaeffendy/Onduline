<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_detil"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/colorPrimaryDark"
        android:scaleType="fitXY"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="Nama Perusahaan Anda"/>

            <TextView
                android:id="@+id/txt_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                android:text="Sentanu Store"/>

            <!-- Owner Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="Nama Toko Pembelian"/>
            <TextView
                android:id="@+id/txt_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Helmi"/>
            <!-- Address -->
            <TextView
                android:id="@+id/txt_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="MALANG"/>
            <TextView
                android:id="@+id/txt_state_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="JAWATIMUR"/>


            <!-- Date Order -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="Tanggal Order : "/>
            <TextView
                android:id="@+id/txt_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="10-03-2017"/>

            <!-- Jumlah produk -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="Jumlah Pesanan Produk : "/>
            <TextView
                android:id="@+id/txt_onduvilla_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="ONDUVILLA® : 352"/>
            <TextView
                android:id="@+id/txt_onduline_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="ONDULINE® : 12"/>
            <TextView
                android:id="@+id/txt_onduclair_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="ONDUCLAIR® : 13"/>




            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/ps__button_youtube"
                android:text="Kembali"
                android:textColor="@color/colorTextLight"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>