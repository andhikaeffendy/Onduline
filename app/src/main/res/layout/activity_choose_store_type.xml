<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_store_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wiradipa.ondulineApplicator.ChooseStoreTypeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="11"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_nav_drawer">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="@color/colorTextLight"
                android:text="Pilih Kategori Toko : "/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <ImageView
                android:onClick="onClickChooseStore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_kat_tradisional"/>
            <ImageView
                android:id="@+id/btnTokoTradisional"
                android:onClick="onClickChooseStore"
                android:src="@color/colorBlacktransparant"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24dp"
                android:text="Toko Bahan Bangunan / Toko Tradisional "/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <ImageView
                android:src="@drawable/img_kat_baja_ringan"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/btnBajaRingan"
                android:onClick="onClickChooseStore"
                android:src="@color/colorBlacktransparant"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="24dp"
                android:text="Toko Baja Ringan / Depo Keramik"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <ImageView
                android:onClick="onClickChooseStore"
                android:background="@drawable/img_kat_supermarket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/btnSupermarket"
                android:onClick="onClickChooseStore"
                android:src="@color/colorBlacktransparant"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textSize="24dp"
                android:text="Supermarket Bahan Bangunan"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnLanjut"
            android:layout_width="match_parent"
            android:onClick="onClickChooseUser"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="24dp"
                android:text="Lanjut"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
