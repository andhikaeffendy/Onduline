<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_project_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wiradipa.ondulineApplicator.MenuDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Detail Produk"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <ImageView
                        android:id="@+id/btnOnduline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_nav_drawer" />

                    <TextView
                        android:id="@+id/txtMenuProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/onduvilla"
                        android:textColor="#fff"
                        android:textSize="30dp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btnDetaiPDescriptionProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_menu_detil"
                    android:onClick="ProductDetail"
                    android:text="deskripsi"
                    android:textColor="@color/colorBlack" />

                <Button
                    android:id="@+id/btnDetailProductSpecification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_menu_detil"
                    android:onClick="ProductDetail"
                    android:text="Spesifikasi produk"
                    android:textColor="@color/colorBlack" />

                <Button
                    android:id="@+id/btnDetailColorSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_menu_detil"
                    android:onClick="ProductDetail"
                    android:text="Pilihan Warna"
                    android:textColor="@color/colorBlack" />

                <Button
                    android:id="@+id/btnDetailAdvantages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_menu_detil"
                    android:onClick="ProductDetail"
                    android:text="Keunggulan"
                    android:textColor="@color/colorBlack" />

                <Button
                    android:id="@+id/btnDetailAccessories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_menu_detil"
                    android:onClick="ProductDetail"
                    android:text="aksesoris"
                    android:textColor="@color/colorBlack" />

                <Button
                    android:id="@+id/btnDetailInstalationGuide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_menu_detil"
                    android:onClick="ProductDetail"
                    android:text="panduan pemasangan"
                    android:textColor="@color/colorBlack"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnDetailSubtainability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_menu_detil"
                    android:onClick="ProductDetail"
                    android:text="sustainability"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>
